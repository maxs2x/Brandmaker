include ../button/button.pug

mixin refinementSlider(options)
  - var options = options || {};
  - var images = options.images || []
  
  .refinement-slider
    +question-slider("1.jpg", "2.jpg", "3.jpg", "4.jpg")

mixin question-slider([img1, img2, img3, img4])
  .question-slider.js-image-slider
    .question-slider__step-number
      .question-slider__step.js-image-slider__dot(data-index="1") Шаг 1
      .question-slider__step.js-image-slider__dot(data-index="2") Шаг 2
      .question-slider__step.js-image-slider__dot(data-index="3") Шаг 3
      .question-slider__step.js-image-slider__dot(data-index="4") Шаг 4
    .question-slider__question-box.js-image-slider__photo-room.image-slider__fade 
      .question-slider__image 
        img.image-slider__image-room(src=require("../../images/slide1.jpg") alt="photo room")
      .question-slider__question
        .question-slider__question-body
          .question-slider__question-number 1
          .question-slider__question-text Вопрос 1
        .question-slider__answer-box
          p OTVET
    .question-slider__question-box.js-image-slider__photo-room.image-slider__fade 
      .question-slider__image
        img.image-slider__image-room(src=require("../../images/slide2.jpg") alt="photo room")
      .question-slider__question
        .question-slider__question-body
          .question-slider__question-number 2
          .question-slider__question-text Вопрос 2
        .question-slider__answer-box
          p OTVET 2
    .question-slider__question-box.js-image-slider__photo-room.image-slider__fade 
      .question-slider__image
        img.image-slider__image-room(src=require("../../images/slide3.jpg") alt="photo room")
      .question-slider__question
        .question-slider__question-body
          .question-slider__question-number 3
          .question-slider__question-text Вопрос 3
        .question-slider__answer-box
          p OTVET 324234
    .question-slider__question-box.js-image-slider__photo-room.image-slider__fade 
      .question-slider__image
        img.image-slider__image-room(src=require("../../images/slide4.jpg") alt="photo room")      
      .question-slider__question
        .question-slider__question-body
          .question-slider__question-number 4
          .question-slider__question-text Вопрос 1afs dadsf as
        .question-slider__answer-box
          p OTVET afasdf ad afa fdf
    .question-slider__navigation 
      .question-slider__prev.js-image-slider__prev 
        +button(['arrow-blue', 'Назад']) 
      .question-slider__next.js-image-slider__next
        +button(['arrow-small', 'Далее']) 

mixin image-slider(...images)
  .image-slider.js-image-slider
    each image in images
      .image-slider__photo-room.js-image-slider__photo-room.image-slider__fade
        img.image-slider__image-room(src=require("../../images/slide" + image) alt="photo room")
    a.image-slider__prev.js-image-slider__prev 
      span.image-slider__arrow-left navigate_before
    a.image-slider__next.js-image-slider__next
      span.image-slider__arrow-right navigate_before
    div.image-slider__dots
      span(class="image-slider__dot js-image-slider__dot" data-index="1")
      span(class="image-slider__dot js-image-slider__dot" data-index="2")
      span(class="image-slider__dot js-image-slider__dot" data-index="3")
      span(class="image-slider__dot js-image-slider__dot" data-index="4")

      

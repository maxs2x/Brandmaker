mixin radio-button(options)
  -
    options = options || {};
    text = options.text || "radio button";
    name = options.name || "name";
    checked = options.checked || "unchecked";
    value = options.value || "defaultRadio";

  label.radio-button=text
    if checked === 'checked'
      input.radio-button__input(type='radio' checked name=name value=value)
      span.radio-button__checkmark 
    else 
      input.radio-button__input(type='radio' name=name value=value)
      span.radio-button__checkmark 
include ../nav-links/nav-links.pug
include ../contacts/contacts.pug
include ../burger-menu/burger-menu.pug

mixin header(options)
  -
    options = options || {};
    defaultMenu = [
      {text: "О нас", href: "/about", active: true},
      {text: "Услуги", href: "not_filled", dropdownItems: [
        {text: "Подбор жлья", href: "not_filled"},
        {text: "Размщение", href: "not_filled"},
      ]},
      {text: "Вакансии", href: "not_filled"},
      {text: "Новости", href: "/news"},
      {text: "Соглашения", href: "not_filled", dropdownItems: [
        {text: "Для арендодателя", href: "not_filled"},
        {text: "Для арендатора", href: "not_filled"},
      ]},
    ]
    menu = options.menu || defaultMenu;
    contacts = options.contacts || {};

  header.header
    .header__navigation 
      a.header__logo(href="index.html") 
        .header__image-logo 
          img(src=require("../../images/Logo.jpg"))
        .header__divider
        .header__text-logo 
          p Медицинские профосмотры в Москве и области  
      nav.header__nav-links
        +nav-links(menu)
    .header__contacts
      +contacts(contacts)
    .header__mobile-logo
      a.header__mobile-logo-link(href="index.html") 
        img.header__image-mobile-logo(src=require("../../images/mobileLogo.jpg"))
    p.header__phone=contacts.phone
    .header__burger-menu
      +burger-menu({links: menu, contactMini: options.mobileContacts})
    
       
   

    
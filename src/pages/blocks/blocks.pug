extends ../../components/mainTemplate.pug

include ../../components/button/button.pug
include ../../components/radio-button/radio-button.pug
include ../../components/text-field/text-field.pug

block variables 
  -
    const keywords_and_description = {
        keywords: 'Деломедика, Медецинский центр',
        description: 'Проведение профосмотров с выездом в Вашу организацию'
    };

block title
  title Деломедика
block content 
  .buttons-block
    +button(['standard', 'Получить коммерческое предложение'])
    .button-cont
      +button(['arrow-big', 'Рассчитать стоимость'])
    .button-cont
      +button(['arrow-small', 'Далее'])
    .button-cont
      +button(['arrow-blue', 'Назад'])
    +radio-button({text: "Требуется выездная бригада"})
    +radio-button({text: "В медцентре"})
    +text-field({id: 'phone', type: 'phone'})
    +text-field({id: 'number', type: 'number', placeholder: "Введите число"})

   
    